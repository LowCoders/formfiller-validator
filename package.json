{
  "name": "formfiller-validator",
  "version": "2.1.0",
  "description": "Advanced validation system for FormFiller with unified expression system, conditional rules, and parallel execution",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "build:watch": "tsc --watch",
    "prepare": "npm run build",
    "test": "jest --no-verbose",
    "test:watch": "jest --watch",
    "test:verbose": "jest --verbose",
    "test:debug": "DEBUG=true jest --verbose",
    "test:coverage": "jest --coverage --no-verbose",
    "test:ci": "jest --coverage --ci --no-verbose",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "csfixer": "prettier --write src && eslint src --ext .ts --fix",
    "csfixer:check": "prettier --check src && eslint src --ext .ts"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "validation",
    "validator",
    "joi",
    "form",
    "devextreme",
    "nested",
    "conditional",
    "parallel",
    "dependency-graph"
  ],
  "author": "FormFiller Development Team",
  "license": "MIT",
  "dependencies": {
    "joi": "^17.11.0"
  },
  "peerDependencies": {
    "formfiller-schema": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "formfiller-schema": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^29.7.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
